{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.15.0/.schema/devbox.schema.json",
  "packages": [
    "python@3.13",
    "poetry@2.1",
    "go-task@3.44",
    "ffmpeg@7.1.1"
  ],
  "shell": {
    "init_hook": [
      "source ~/.aliases",
      "poetry lock",
      "poetry install || echo 'Poetry install failed/skipped'"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
